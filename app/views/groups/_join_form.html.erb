<%= semantic_form_for(:groups_user, :url => { :class => "group", :action => "join_save" }) do |f| %>
  <% if @groups_user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@groups_user.errors.count, "error") %> prohibited this user from joining this group:</h2>

      <ul>
      <% @groups_user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.input :permission_email, :as => :boolean, :label => "Share e-mail?" %>
  <%= f.input :permission_phone_number, :as => :boolean, :label => "Share phone_number?" %>
  <%= f.commit_button :label => "Join clique", :button_html => { :class => "button primary" } %>

<% end %>
