<h1>Listing groups</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Owner</th>
    <th>Color</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @groups.each do |group| %>
  <tr>
    <td><%= group.name %></td>
    <% if group.owner == current_user %>
      <td>Yes</td>
    <% else %>
      <td>Yes</td>
    <% end %>  

    <td><%= group.color %></td>
    <td><%= link_to 'Edit', edit_group_path(group) %></td>
    <% if group.owner == current_user %>
      <td><%= link_to 'Delete group', group, :confirm => 'Are you sure?', :method => :delete %></td>
    <% end %>
  </tr>
<% end %>
</table>

