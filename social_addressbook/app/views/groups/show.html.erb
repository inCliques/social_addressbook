<p id="notice"><%= notice %></p>

<p>
  <b>Clique name:</b>
  <%= @group.name %>
</p>

<p><b>Invitation link:</b>  <%= link_to join_group_url(@group), join_group_path(@group) %> <i>Share this URL to invite people to join your clique</i>

</p>

<h3>Verified members</h3>
<% @group.users.each do |user| %>
  Name: <%= user.name %></br>
  Details:
  <% user.user_data.each do |user_data| %>
    <%= user_data.name %> <%= user_data.data_type.name %>: <%= user_data.value %>
    <br>
   <% end %>
<% end %>

<p>

<h3>Unverified members</h3>
<% @group.offline_users.each do |user| %>
  Name: <%= user.name %></br>
<% end %>

<p>

<%= link_to 'Edit', edit_group_path(@group), :class => 'button primary icon edit' %>
