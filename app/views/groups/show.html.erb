<h3>Verified members</h3>
<% @group.users.each do |user| %>
  Name: <%= user.name %></br>
  Details:
  <% user.user_data.each do |user_data| %>
    <%= user_data.name %> <%= user_data.data_type.name %>: <%= user_data.value %>
    <br>
   <% end %>
   </br>
   </br>
<% end %>

<p>

</br>

<h3>Unverified members</h3>
<% @group.offline_users.each do |user| %>
  <%= user.name %>
  <% user.offline_user_data.each do |user_data| %>
    (<%= user_data.value %>)
    <br>
  <% end %>

   </br>
   </br>
<% end %>

<p>

