<% if @offline_user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@offline_user.errors.count, "error") %> prohibited this person from being invited into this clique:</h2>

    <ul>
    <% @offline_user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<% if @user_datum.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user_datum.errors.count, "error") %> prohibited this person from being invited into this clique:</h2>

    <ul>
    <% @user_datum.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= semantic_form_for(:user_datum, :url => { :class => "group", :action => "invite_save" }) do |f| %>
  <%= f.input :name, :label => "Name" %>
  <%= f.inputs :class => 'inline_fields' do%>
    <%= f.input :data_type_id, :label => "Type", :as => :select, :collection => DataType.find(:all), :prompt => "[select type]", :wrapper_html => { :class => "left" } %>
    <%= f.input :value, :class => "right", :label => "Address", :wrapper_html => { :class => "left" } %>
  <% end %>
  <%= f.commit_button :label => "Invite to clique" %>
<% end %>
