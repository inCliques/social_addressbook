<%= form_for(:group, :url => { :action => "join_save" }) do |f| %>
  <% if @groups_user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@groups_user.errors.count, "error") %> prohibited this user from joining this group:</h2>

      <ul>
      <% @groups_user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label "Share e-mail?" %>
    <%= f.check_box :permission_email %>
  </div>
  <div class="field">
    <%= f.label "Share phone_number?" %>
    <%= f.check_box :permission_phone_number %>
  </div>
  <div class="actions">
    <%= f.submit 'Join clique' %>
  </div>
<% end %>
