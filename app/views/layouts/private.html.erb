<!DOCTYPE HTML>
<html>
	<head>
		<title>inCliques</title>
		<%= stylesheet_link_tag :all %>
		<%= stylesheet_link_tag 'formtastic' %>
		<!--[if IE 6]><%= stylesheet_link_tag 'formtastic_ie6' %><![endif]-->
		<!--[if IE 7]><%= stylesheet_link_tag 'formtastic_ie7' %><![endif]-->
		<%= javascript_include_tag :defaults %>
		<%= csrf_meta_tag %>
	</head>
	<!-- Start of body -->
	<body>
		<!-- Start of top bar -->
		<div id="top-bar">
			<div id="user-info">
				<% if user_signed_in? %>
				Signed in as <b> <%= current_user.email %></b>. Not you?
				<%= link_to "Sign out", destroy_user_session_path, :method => :delete %>
				<% end %>
			<p class="notice"><%= notice %></p>
			<p class="alert"><%= alert %></p>
			</div>
		</div>
		
		<!-- Start of container -->
		<div id="container">
		
			<!-- Start of header -->
			<header>
				<div id="header">
					<div id="logo"><img src="../images/logo.png" alt="inCliques" id="incliques" /></div>
					<div id="navigation">
						Navigation would go here, etc
					</div>
				</div>
			</header>
			<div id="content-container" class="clearfix">
				<!-- Start of content -->
				<section>
					<div class="side-box">
						<% if user_signed_in? %>
						<div id="left_panel">
						  <ul>
							  <li>
								  <%= link_to "My cliques", groups_path %>
							  </li>
							  <li>
								  <%= link_to "Create a Clique", new_group_path %>
							  </li>
							  <li>
								  <%= link_to "My profile", user_data_path %>
							  </li>
						 </ul>
						</div>
						<% end %>
					</div>

					<div class="main-box">
					<%= yield %>			

					</div>

				</section>
				
				<!-- Start of footer -->
				<footer>
					<div class="wide-box margin-10">
					This is supposed to be a footer
					</div>
				</footer>
			</div>
		</div>
	</body>
</html>
