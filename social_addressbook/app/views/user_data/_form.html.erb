<%= semantic_form_for @user_datum do |f| %>
  <%= f.inputs do %>
    <% if @user_datum.data_type.name != 'Name' %>
      <%= f.input :data_type, :as => :select, :collection => DataType.where("NOT name == 'Name'") %>
    <% end %>
    <%= f.input :name %>
    <%= f.input :value %>
    <%= f.input :verified %>
  <% end %>

  <%= f.buttons do %>
    <%= f.commit_button %>
  <% end %>
<% end %>
