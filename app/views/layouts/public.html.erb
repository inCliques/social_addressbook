<!DOCTYPE HTML>
<html>
	<head>
		<title>inCliques</title>
		<%= stylesheet_link_tag :all %>
		<%= stylesheet_link_tag 'formtastic' %>
		<!--[if IE 6]><%= stylesheet_link_tag 'formtastic_ie6' %><![endif]-->
		<!--[if IE 7]><%= stylesheet_link_tag 'formtastic_ie7' %><![endif]-->
		<%= javascript_include_tag :defaults %>
		<%= csrf_meta_tag %>
	</head>
	<!-- Start of body -->
	<body>
		<!-- Start of top bar -->
		<div id="top-bar">
			<div id="user-info">
				<br /><br />
			</div>
		</div>
		
		<!-- Start of container -->
		<div id="container">
		
			<!-- Start of header -->
			<header>
				<div id="header">
					<div id="logo"><%= image_tag "logo.png", :size => "200x106", :alt => "inCliqu.es", :id => "incliques" %></div>
					<div id="navigation">
						<h2>your private community addressbook</h2>
						</div>
				<!-- 	<div id="logo-bar">Click to connect via 
						<a href="/auth/viadeo"><%= image_tag "viadeo_32.png", :size => "32x32", :alt => "Viadeo" %></a>
						<a href="/auth/twitter"><%= image_tag "twitter_32.png", :size => "32x32", :alt => "Twitter" %></a>
						</div> -->
				</div>
			</header>
			<div id="content-container" class="clearfix">
				<!-- Start of content -->
				<section>
			<p class="notice"><%= notice %></p>
			<p class="alert"><%= alert %></p>
					<%= yield %>
				</section>
				
				<!-- Start of footer -->
				<footer>
					<div class="wide-box margin-10">
					<a href="http://www.incliqu.es/blog/about-us/">About Us</a> | <a href="http://www.incliqu.es/blog/">Blog</a> | <a href="http://www.incliqu.es/betasignup.php">Sign up for our Beta</a>
					</div>
				</footer>
			</div>
		</div>
	</body>
</html>
